{
	"archinstall-language": "English",
	"audio_config": {
		"audio": "pipewire"
	},
	"bootloader": "Grub",
	"custom_commands": [
		"sed -i 's/^# %wheel ALL=(ALL:ALL) ALL/%wheel ALL=(ALL:ALL) ALL/' /etc/sudoers",
		"echo 'Defaults rootpw' >> /etc/sudoers",

		"sed -i 's/^MODULES=.*/MODULES=(nvidia_modeset nvidia_uvm nvidia-drm)/' /etc/mkinitcpio.conf || echo 'MODULES=(nvidia_modeset nvidia_uvm nvidia-drm)' >> /etc/mkinitcpio.conf",
		"mkinitcpio -P",

		"chsh -s /usr/bin/zsh poppy",
		"usermod -aG storage,power,docker,libvirt poppy",

		"sed -i 's/^#* *unix_sock_group = .*/unix_sock_group = \"libvirt\"/' /etc/libvirt/libvirtd.conf",
		"sed -i 's/^#* *unix_sock_rw_perms = .*/unix_sock_rw_perms = \"0770\"/' /etc/libvirt/libvirtd.conf"
	],
	"hostname": "arch",
	"kernels": ["linux-zen"],
	"locale_config": {
		"kb_layout": "us",
		"sys_enc": "UTF-8",
		"sys_lang": "en_US.UTF-8"
	},
	"mirror_config": {
		"optional_repositories": ["multilib"]
	},
	"ntp": true,
	"packages": [
		"base-devel",
		"dnsmasq",
		"superfile",
		"thunar",
		"docker",
		"egl-wayland",
		"flatpak",
		"hyprshot",
		"ghostty",
		"git",
		"gnome-keyring",
		"hyprland",
		"hyprpaper",
		"hyprpicker",
		"hyprpolkitagent",
		"hyprsunset",
		"hyprlang",
		"intel-ucode",
		"keychain",
		"libglvnd",
		"libnewt",
		"linux-zen-headers",
        "discover",
		"mako",
		"cmake",
		"cpio",
		"pkg-build",
		"meson",
		"neovim",
		"nvidia-open-dkms",
		"gcc",
		"nvidia-settings",
		"nvidia-utils",
		"obsidian",
		"ollama",
		"opencl-nvidia",
		"openssh",
		"os-prober",
		"tree",
